{
  "name": "ShortcutsForMessenger", 
  "short_name": "S4M",
  "description": "Shortcuts for messenger.com",
  "version": "0.0.2",
  "permissions": [
    "activeTab", "https://www.messenger.com/*", "tabs"
  ],
  "icons": { 
    "16": "assets/icon-16.png",
    "24": "assets/icon-24.png",
    "32": "assets/icon-32.png",
    "128": "assets/icon-128.png" 
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.messenger.com/*"],
      "js": ["src/shortcuts.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "sendLike": {
      "suggested_key": {
        "windows": "Ctrl + Up",
        "mac": "MacCtrl+Up",
        "chromeos": "Ctrl + Up",
        "linux": "Ctrl + Up"
      }, "description": "Send like"
    },
    "search": {
      "suggested_key": {
        "windows": "Ctrl + Period",
        "mac": "MacCtrl + Period",
        "chromeos": "Ctrl + Period",
        "linux": "Ctrl + Period"
      }, "description": "Search"
    }
  },
  "manifest_version": 2
}
