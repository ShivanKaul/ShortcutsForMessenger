{
  "name": "ShortcutsForMessenger-1", 
  "short_name": "S4M1",
  "description": "Shortcuts for messenger.com, first part",
  "version": "0.0.7",
  "permissions": [
    "activeTab", "https://www.messenger.com/*", "tabs"
  ],
  "icons": { 
    "16": "assets/icon-16.png",
    "24": "assets/icon-24.png",
    "32": "assets/icon-32.png",
    "128": "assets/icon-128.png" 
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.messenger.com/*"],
      "js": ["src/shortcuts.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "sendLike": {
      "suggested_key": {
        "windows": "Ctrl + Up",
        "mac": "MacCtrl+Up",
        "chromeos": "Ctrl + Up",
        "linux": "Ctrl + Up"
      }, "description": "Send like"
    },
    "search": {
      "suggested_key": {
        "windows": "Ctrl + K",
        "mac": "MacCtrl + K",
        "chromeos": "Ctrl + K",
        "linux": "Ctrl + K"
      }, "description": "Search"
    },
    "newMessage": {
      "suggested_key": {
        "windows": "Ctrl + N",
        "mac": "MacCtrl + N",
        "chromeos": "Ctrl + N",
        "linux": "Ctrl + N"
      }, "description": "New message"
    },
    "conversationInfo": {
      "suggested_key": {
        "windows": "Ctrl + I",
        "mac": "MacCtrl + I",
        "chromeos": "Ctrl + I",
        "linux": "Ctrl + I"
      }, "description": "Toggle conversation info"
    }
  },
  "manifest_version": 2
}
